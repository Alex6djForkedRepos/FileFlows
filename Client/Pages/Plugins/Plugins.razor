@namespace FileFlow.Client.Pages
@using FileFlow.Shared.Models

@page "/plugins"

<PageView>

    <Head>
    </Head>

    <Body>
        <div class="plugins page-table">
            <div class="table-toolbar">
                <button @onclick="@Edit"
                    disabled="@(SelectedItems?.FirstOrDefault()?.HasSettings == true ? null : "disabled")"><span c
                        lass="fas fa-edit"></span>
                    @lblEdit</button>
            </div>

            <RadzenDataGrid @ref="DataGrid" AllowFiltering="true" SelectionMode="DataGridSelectionMode.Single"
                @bind-Value=@SelectedItems AllowColumnResize="true" FilterMode="FilterMode.Advanced" AllowSorting="true"
                Data="@Data" TItem="PluginInfo" LogicalFilterOperator="LogicalFilterOperator.Or">
                <Columns>
                    <RadzenDataGridColumn TItem="PluginInfo" Width="40px" Sortable="false" Filterable="false">
                        <HeaderTemplate>
                        </HeaderTemplate>
                        <Template Context="data">
                            <RadzenCheckBox TriState="false"
                                Value="@(SelectedItems != null && SelectedItems.Contains(data))" />
                        </Template>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="PluginInfo" Property="Name" Title="Name" />
                    <RadzenDataGridColumn TItem="PluginInfo" Property="Version" Title="Version" />
                    <RadzenDataGridColumn TItem="PluginInfo" Property="Assembly" Title="Assembly" />
                    <RadzenDataGridColumn TItem="PluginInfo" Property="Enabled" Title="Enabled">
                        <Template Context="item">
                            <div class="switch-wrapper">
                                <RadzenSwitch @bind-Value="@item.Enabled" Change="@(args => Enable(args, item))" />
                            </div>
                        </Template>
                    </RadzenDataGridColumn>
                </Columns>
            </RadzenDataGrid>
        </div>
    </Body>

</PageView>