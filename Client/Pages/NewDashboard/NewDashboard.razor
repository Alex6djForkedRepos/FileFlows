@page "/new-dashboard"
@using FileFlows.Client.Components.Widgets
@namespace FileFlows.Client.Pages

<div class="dashboard-wrapper">
    
    <FlowTabs NewTabs="true">
        <FlowTab Title="Dashboard" Icon="fas fa-chart-pie">
            
            <div class="grid grid-4">
                <TrendWidget Title="Processed" Color="green" Icon="far fa-check-circle" Suffix="10/day" Total="158">
                    <WidgetOption Label="Day" Value="1" />
                    <WidgetOption Label="Week" Value="2" />
                    <WidgetOption Label="Month" Value="3" />
                </TrendWidget>
                <TrendWidget Title="Savings" Color="red" Icon="fas fa-hdd" Suffix="7.5 GB/day" Total="42.6 GB">
                    <WidgetOption Label="Day" Value="1" />
                    <WidgetOption Label="Week" Value="2" />
                    <WidgetOption Label="Month" Value="3" />
                </TrendWidget>
                <CpuRamWidget />
                <TrendWidget Title="Trend" Color="purple" Icon="fas fa-hdd" Suffix="7.5 GB/day" Total="42.6 GB">
                    <WidgetOption Label="Day" Value="1" />
                    <WidgetOption Label="Week" Value="2" />
                    <WidgetOption Label="Month" Value="3" />
                </TrendWidget>
            </div>
            
            <div class="grid flex-grow">
                <FlowRunnersWidget />
            </div>

        </FlowTab>
        <FlowTab Title="Details" Icon="fas fa-calendar">
            The details
        </FlowTab>
    </FlowTabs>
    
</div>
