@namespace FileFlows.Client.Components.Inputs
@using Humanizer
@inherits Input<Dictionary<string, object>>

@if (Value?.Any() == true)
{
    <table class="flowtable input-metadata">
        <thead>
        <tr>
            <th>Name</th>
            <th>Value</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var md in metadata)
            {
                @if (md.Name != "General")
                {
                    <tr>
                        <td class="title" colspan="2">@md.Name</td>
                    </tr>
                }
                @foreach (var item in md.Values)
                {
                    <tr class="md-@item.Key.Dehumanize()">
                        <td class="label">@item.Key</td>
                        <td class="value">@item.Value</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

