@namespace FileFlows.Client.Components.Inputs

@{
    bool invalid = string.IsNullOrEmpty(Input?.ErrorMessage) == false;

}
<div class="row @(invalid ? "error" : "") @(Input?.HideLabel == true ? "hide-label": "")">
    <div class="input-label">
        @if (string.IsNullOrEmpty(Input?.Label) == false)
        {
            <label>@Input.Label</label>
        }
    </div>

    <div class="input-value">
        @ChildContent
    </div>
</div>


@if (invalid)
{
    <div class="row mt-0 @(invalid ? "error" : "")">
        <div class="input-label"></div>
        <div class="input-value">
            <span class="error-text">@Input.ErrorMessage</span>
        </div>
    </div>
}
@if (string.IsNullOrEmpty(Input?.Help) == false)
{
    <div class="row mt-0 @(invalid ? "error" : "")">
        <div class="input-label"></div>
        <div class="input-value">
            <span class="help-text">@Input.Help</span>
        </div>
    </div>
}