@namespace ViWatcher.Client.Components.Inputs

<div class="row">
    <div class="col-md-4 align-items-center d-flex input-label">
        <RadzenLabel Text="@Input.Label" />
    </div>
    <div class="col-md-8 input-value">
        @ChildContent
        @if(string.IsNullOrEmpty(Input.Help) == false){
            <span class="help-text">@Input.Help</span>
        }
    </div>
</div>