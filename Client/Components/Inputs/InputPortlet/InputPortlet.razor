@namespace FileFlows.Client.Components.Inputs
@using FileFlows.Client.Components.Inputs.InputPortletPreviews
@using FileFlows.Shared.Portlets
@using Humanizer
@inherits Input<bool>

<div class="input-portlet" @onclick=@ToggleValue @onclick:preventDefault @onclick:stopPropagation>
    <span class="title">
        <div class="flow-switch-wrapper">
            <FlowSwitch @bind-Value="@Value"/>
        </div>
        <label>@Label</label>
    </span>
    <div class="preview @Type">
        @switch (Type)
        {
            case PortletType.BoxPlot:
                <PreviewBoxPlot />
                break;
            case PortletType.HeatMap:
                <PreviewHeatMap />
                break;
            case PortletType.LibraryFileTable:
                <PreviewLibraryFileTable />
                break;
            case PortletType.PieChart:
                <PreviewPieChart />
                break;
            case PortletType.Processing:
                <PreviewProcessing />
                break;
            case PortletType.TimeSeries:
                <PreviewTimeSeries />
                break;
            case PortletType.TreeMap:
                <PreviewTreeMap />
                break;
        }
        
    </div>
</div>     