@namespace FileFlows.Client.Components.Inputs
@inherits Input<string[]>

<InputWrapper Input="@this">
    <div class="input-array-wrapper">
        @foreach (var str in Value ?? new string[] { })
        {
            <span class="chip">
                @str
                <span class="remove fas fa-times" @onclick="() => Remove(str)"></span>
            </span>
        }
        <input id=@Uid type="text" @onkeyup="OnKeyDown" @bind-value="InputText" @bind-value:event="oninput" @onblur="OnBlur" />
    </div>
</InputWrapper>
