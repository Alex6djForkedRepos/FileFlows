@namespace FileFlow.Client.Components

<div class="vi-container @(FullWidth ? "fullwidth" : "") @(Flex ? "flex" : "")">
    <div class="top-row  @(AlwaysShowTitle ? "show-title" : "")">
        <span class="title">
            @if (string.IsNullOrEmpty(Icon) == false)
            {
                <span class="icon @Icon"></span>
            }
            @Title
        </span>
        <span class="other">
            @Head
        </span>
    </div>

    <div class="content">
        @Body
    </div>
</div>