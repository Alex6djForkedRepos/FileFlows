@namespace FileFlows.Client.Components
@inherits Editor

@using FileFlows.Shared
@using FileFlows.Plugin;
@using Humanizer

@if (Visible)
{
    <div class="editor-wrapper">
        <div class="background-overlay"></div>
        <div class="editor @(Maximised ? "maximised" : "") @(Large ? "large" : "") @(TypeName?.Dehumanize()) @(ReadOnly ? "readonly" : "")">

            <ViContainer Title="@(CurrentTemplate?.Name?.EmptyAsNull() ?? Title)" Icon="@Icon" FullWidth=@true AlwaysShowTitle=@true Maximise=true OnMaximised=@OnMaximised>

                <Head>
                    <button @onclick=@Save> 
                        @if (IsSaving)
                        {
                            @lblSaving
                        }
                        else if(CurrentTemplate?.Fields?.Any() != true)
                        {
                            @lblSave
                        }
                        else
                        {
                            @lblNext
                        }
                    </button>
                    <button @onclick=@Cancel>@lblCancel</button>

                    @if(string.IsNullOrEmpty(HelpUrl) == false)
                    {
                        <button @onclick=@OpenHelp>@lblHelp</button>
                    }
                </Head>

                <Body>
                    <CascadingValue IsFixed="true" Value="this">
                        <div class="fields">
                            <div class="description">@(CurrentTemplate?.Flow?.Description?.EmptyAsNull() ?? lblDescription)</div>
                            @if (Fields?.Any() == true)
                            {
                                @foreach (var field in Fields)
                                {
                                    <InputRenderer field="field" OnSubmit=@OnSubmit OnClose=@OnClose />
                                }
                                <div class="empty"></div>
                            }
                        </div>
                    </CascadingValue>
                </Body>
            </ViContainer>
        </div>

    </div>
}