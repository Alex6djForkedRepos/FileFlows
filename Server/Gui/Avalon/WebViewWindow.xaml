<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:webview="clr-namespace:WebViewControl;assembly=WebViewControl.Avalonia"
        x:Class="FileFlows.Server.Gui.Avalon.WebViewWindow" 
        Title="FileFlows" Width="1600" 
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="PreferSystemChrome"
		
        Foreground="#ff0090"
        Background="#111214"
        FontSize="14"
		Icon="avares://FileFlows.Server/Gui/icon.ico"
	>
	<Panel>
		<webview:WebView x:Name="webview" Address="{Binding ServerUrl}" />
	</Panel>
</Window>